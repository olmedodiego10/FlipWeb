<!DOCTYPE html>
<html>
<head>
    <link rel="apple-touch-icon" sizes="180x180" href="~/Images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Images/favicon-16x16.png">
    <link rel="manifest" href="~/Images/site.webmanifest">
    <link rel="mask-icon" href="~/Images/safari-pinned-tab.svg" color="#5bbad5">
    <link rel="shortcut icon" href="~/Images/favicon.ico">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="msapplication-config" content="~/Images/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Flip S.A.S</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a href="@Url.Action("Index", "Home")">
                <img border="0" width="100" alt="Flip" src="~/Images/flipLogoGris.jpg" class="img-fluid">
            </a>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">

                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Nosotros", "About", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contacto", "Contact", "Home", null, new { @class = "nav-link" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content semitransparente">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <em><strong>&copy; @DateTime.Now.Year - Flip S.A.S</strong></em>
            <a href="https://www.facebook.com">
                <img style="margin-left:5px; margin-bottom:3px" border="0" width="25" height="25" alt="Flip" src="~/Images/FacebookLogo.png">
            </a>
            <a href="https://www.instagram.com">
                <img style="margin-left:5px; margin-bottom:3px" border="0" width="25" height="25" alt="Flip" src="~/Images/InstagramLogo.png">
            </a>
            <a href="https://twitter.com">
                <img style="margin-left:5px; margin-bottom:3px" border="0" width="25" height="25" alt="Flip" src="~/Images/TwitterLogo.png">
            </a>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
