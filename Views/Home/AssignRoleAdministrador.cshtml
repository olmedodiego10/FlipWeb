
@model FlipWeb.Models.ApplicationUser

@{
    ViewBag.Title = "Asignar rol Administrador";
}

<h2>Asignar rol Administrador</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h3>¿Desea asignar rol de Administrador?</h3>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Si, asignar rol" , class="btn btn-success col-md-4 col-sm-12 col-xs-12" />
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Cancelar" , class="btn btn-success col-md-4 col-sm-12 col-xs-12" onclick="location.href='@Url.Action("UsersList","Home")'" />
            </div>
        </div>
    </div>
}