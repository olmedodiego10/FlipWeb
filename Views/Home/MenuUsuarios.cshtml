@model FlipWeb.Models.MenuUsuariosViewModel
@{
    ViewBag.Title = "ListadoOfertas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Menu</h2>

<h3>Ofertas de Carga</h3>
<div style="overflow-x:auto;">
    <table class="table">

        <tr>
            <th>
                País de partida
            </th>
            <th>
                Ciudad de partida
            </th>
            <th>
                País de destino
            </th>
            <th>
                Ciudad de destino
            </th>
            <th>
                Fecha de oferta
            </th>
            <th>
                Descripción de mercadería
            </th>
            <th>
                Requiere exclusividad
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.ListadoOfertasCarga)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.PaisPartida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CiudadPartida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaisDestino)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CiudadDestino)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaOferta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescripcionMercaderia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequiereExclusividad)
                </td>
                <td>
                    @Html.ActionLink("Detalles", "DetallesOfertaCargaCliente", "Home", new { id = item.OfertaId }, null)
                </td>
            </tr>
        }

    </table>
</div>
<h3>Ofertas de Transporte</h3>
<div style="overflow-x:auto;">
    <table class="table">
        <tr>
            <th>
                País de partida
            </th>
            <th>
                Ciudad de partida
            </th>
            <th>
                País de destino
            </th>
            <th>
                Ciudad de destino
            </th>
            <th>
                Fecha de oferta
            </th>
            <th>
                Medidas caja
            </th>
            <th>
                Tipo de caja
            </th>
            <th>
                Tipo de camión
            </th>
            <th>
                Costo total
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.ListadoOfertasTransporte)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PaisPartida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CiudadPartida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaisDestino)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CiudadDestino)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaOferta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedidasCaja)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoCaja)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoCamion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Costo)
                </td>
                <td>
                    @Html.ActionLink("Detalles", "DetallesOfertaTransporteCliente", "Home", new { id = item.OfertaId }, null)
                </td>
            </tr>
        }

    </table>
</div>
@Html.ActionLink("Crear Oferta de Carga", "CreateOfertaCarga", "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })
@Html.ActionLink("Crear Oferta de Transporte", "CreateOfertaTransporte", "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })
@Html.ActionLink("Mis Ofertas activas*", "Action", "Controller", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })
