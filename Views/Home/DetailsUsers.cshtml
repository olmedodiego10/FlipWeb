@model FlipWeb.Models.ApplicationUser

@{
    ViewBag.Title = "Detalles de usuario";
   // Layout = "~/Views/Shared/_LayoutCli.cshtml";
}

<h2>@ViewBag.Title</h2>
@if(Model.LockoutEndDateUtc > DateTime.Now) { <h3>USUARIO BLOQUEADO</h3>}
<div>
    <p class="text-danger" style="max-width:500px">@TempData["mensaje"]</p>
    @if (Model.Id.ToString() == TempData["usuarioId"].ToString())
    {
        <h4>Mis datos</h4>
    }
    else
    {
        <h4>Cliente</h4>
    }
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Apellido)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cedula)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cedula)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Celular)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Celular)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefono)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Premium)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Premium)
        </dd>
    </dl>
</div>
<p>
    @if (Model.Id.ToString() != TempData["usuarioId"].ToString())
    {

     if (Model.LockoutEndDateUtc > DateTime.Now)
    {
        @Html.ActionLink("Desbloquear usuario", "DesbloquearUsuario", "Home", routeValues: new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-danger", @role = "button" })
    }
    else
    {
        @Html.ActionLink("Bloquear usuario", "BloquearCuentaUsuario", "Home", routeValues: new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-danger", @role = "button" })

    }

    if (Model.RolString == "Administrador" && (Model.LockoutEndDateUtc < DateTime.Now || Model.LockoutEndDateUtc == null))
    {
        @Html.ActionLink("Asignar rol Cliente", "AssignRoleCliente", "Home", routeValues: new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-success", @role = "button" })
    }

    if (Model.RolString == "Cliente" && (Model.LockoutEndDateUtc < DateTime.Now || Model.LockoutEndDateUtc == null))
    {
        @Html.ActionLink("Asignar rol Administrador", "AssignRoleAdministrador", "Home", routeValues: new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-success", @role = "button" })
    }
    }
</p>
