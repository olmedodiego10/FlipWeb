@model FlipWeb.Domain.Contacto

@{
    ViewBag.Title = "CreateContacto";
}

<h2>CreateContacto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Contacto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h3>¿Desea contactarse con el ofertante?</h3>
        <div class="form-group">
            @Html.LabelFor(model => model.IdOfertaContactada, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <h3>@Session["idOferta"]</h3>
                @*@Html.EditorFor(model => model.IdOfertaContactada, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IdOfertaContactada, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaContacto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <h3>@DateTime.Now.ToShortDateString()</h3>
                @*@Html.EditorFor(model => model.FechaContacto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FechaContacto, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Si, deseo contactarme" , class="btn btn-success" />
                @Html.ActionLink("No. Cambié de parecer. Cancelar.", "MenuUsuarios", "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-danger", @role = "button" })
            </div>
        </div>
    </div>
}