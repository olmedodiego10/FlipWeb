@model FlipWeb.Domain.OfertaCarga
@Styles.Render("~/Content/FlipStyleSheet.css")
@{
    ViewBag.Title = "BusquedaRapidaOfertaCarga";
}

<h2>Menu</h2>
<div>
    <p class="text-danger" style="max-width:500px">@TempData["errorBusqueda"]</p>

    <h5>Búsqueda de ofertas</h5>
    @using (Html.BeginForm("BusquedaRapidaOferta", "Home", FormMethod.Post))
    {
        @Html.TextBox("idOferta", "", new { @placeholder = "Id", @class = "form-control" })
        <button type="submit" class="btn btn-success">Búsqueda rápida</button>
    }
</div>
@if (User.IsInRole("Cliente"))
{
    <h3>Oferta de Carga</h3>
    <div class="containerCard">

        <a class="text-decoration-none" href="@Url.Action("DetailsOfertaCargaUser", "Home", new { id = Model.OfertaId })">
            <div class="card" id="cardBusquedaRapida">
                <img class="card-img-top" src="@Url.Action("getImageOfertaCarga", "Home", new { id = Model.OfertaId })" />

                <div class="encabezado">
                    <h5>@Html.DisplayFor(modelItem => Model.CiudadPartida) - @Html.DisplayFor(modelItem => Model.CiudadDestino)</h5>

                    <p><strong>@Html.DisplayFor(modelItem => Model.PaisPartida) - @Html.DisplayFor(modelItem => Model.PaisDestino)</strong></p>

                    <p> <strong>Fecha: </strong>@Html.DisplayFor(modelItem => Model.FechaOferta)</p>
                    @if (Model.RequiereExclusividad == true)
                    {
                        <p><strong>Requiere exclusividad:</strong> Si</p>
                    }
                    else
                    {
                        <p><strong>Requiere exclusividad:</strong> No</p>
                    }
                </div>
                <div class="card-footer">
                    <p class="card-footerText">Código de oferta: #@Html.DisplayFor(modelItem => Model.OfertaId)</p>
                </div>
            </div>
        </a>

    </div>
}
@if (User.IsInRole("Administrador"))
{
    <h3>Oferta de Carga</h3>
    <div class="containerCard">

        <a class="text-decoration-none" href="@Url.Action("DetallesOfertaCargaAdministrador", "Home", new { id = Model.OfertaId })">
            <div class="card" id="cardBusquedaRapida">
                <img class="card-img-top" src="@Url.Action("getImageOfertaCarga", "Home", new { id = Model.OfertaId })" />

                <div class="encabezado">
                    <h5>@Html.DisplayFor(modelItem => Model.CiudadPartida) - @Html.DisplayFor(modelItem => Model.CiudadDestino)</h5>

                    <p><strong>@Html.DisplayFor(modelItem => Model.PaisPartida) - @Html.DisplayFor(modelItem => Model.PaisDestino)</strong></p>

                    <p> <strong>Fecha: </strong>@Html.DisplayFor(modelItem => Model.FechaOferta)</p>
                    @if (Model.RequiereExclusividad == true)
                    {
                        <p><strong>Requiere exclusividad:</strong> Si</p>
                    }
                    else
                    {
                        <p><strong>Requiere exclusividad:</strong> No</p>
                    }
                </div>
                <div class="card-footer">
                    <p class="card-footerText">Código de oferta: #@Html.DisplayFor(modelItem => Model.OfertaId)</p>
                </div>
            </div>
        </a>

    </div>
}