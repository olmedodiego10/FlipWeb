@model int
@{
    ViewBag.Title = "FinalizarOferta";
}


<h2>Re activar oferta</h2>

<h4>Lo oferta pasará a figurar como activa y volverá a aparecer en los listados.</h4>

<div class="col-md-offset-2 col-md-10">
    @Html.ActionLink("Re activar", "ReActivarOfertaConfirmado", "Home", routeValues: new { idOferta = Model }, htmlAttributes: new { @class = "btn btn-success", @role = "button" })
    <input class="btn btn-danger" type='button' onclick='history.back();' value=' Cancelar.' />
</div>